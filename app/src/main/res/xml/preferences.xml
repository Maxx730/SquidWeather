<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General">

        <EditTextPreference
            android:defaultValue="05401"
            android:key="api_zipcode"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Zipcode" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="use_location"
            android:title="Use Location" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="display_farenheit"
            android:title="Farenheit" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Forecast Graph">

        <SwitchPreference
            android:defaultValue="true"
            android:key="curve_graph"
            android:title="Curve Graph" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="graph_gridlines"
            android:title="Show Graph Gridlines" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="graph_dots"
            android:title="Dots on Graph" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/list_preference_entries"
            android:entryValues="@array/list_preference_entries"
            android:key="@string/graph_animation_speed"
            android:title="Graph Animation Speed" />
    </PreferenceCategory>
</PreferenceScreen>